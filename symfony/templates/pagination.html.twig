{% if pageCount > 1 %}
<nav>
	<ul class="pagination">
		{% if previous is defined %}
			<li class="page-item">
				<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&larr; Previous</a>
			</li>
		{% else %}
			<li class="page-item">
				<span class="page-link disabled">&larr; Previous</span>
			</li>
		{% endif %}
		{% for page in pagesInRange %}
			{% if page != current %}
				<li class="page-item">
					<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
				</li>
			{% else %}
				<li class="page-item">
					<span class="page-link active">{{ page }}</span>
				</li>
			{% endif %}
		{% endfor %}
		{% if next is defined %}
			<li class="page-item">
				<a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Next &rarr;</a>
			</li>
		{% else %}
			<li class="page-item">
				<span class="page-link disabled">Next &rarr; </span>
			</li>
		{% endif %}
	</ul>
</nav>
{% endif %}